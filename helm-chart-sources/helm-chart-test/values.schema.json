{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "JSON Schema Example",
    "description": "The root schema comprises the entire JSON document.",
    "required": [
        "license",
        "licenseType",
        "replicaCount",
        "arch",
        "image",
        "storageSecurity",
        "serviceAccount",
        "service",
        "secret"
    ],
    "properties": {
        "license": {
            "$id": "#/properties/license",
            "type": "boolean",
            "title": "License acceptance",
            "description": "License acceptance description.",
            "default": false,
            "examples": [
                false,
				true
            ]
        },
        "licenseType": {
            "$id": "#/properties/licenseType",
            "type": "string",
            "title": "License Type",
            "description": "License Type description",
            "default": "",
            "examples": [
                "non-prod",
				"prod"
            ]
        },
        "replicaCount": {
            "$id": "#/properties/replicaCount",
            "type": "integer",
            "title": "Replica Count",
            "description": "Replica Count Description.",
            "default": 1
        },
        "arch": {
            "$id": "#/properties/arch",
            "type": "string",
            "title": "Arch",
            "description": "Arch Description",
            "default": "amd64",
            "examples": [
                "amd64"
            ]
        },
        "image": {
            "$id": "#/properties/image",
            "type": "object",
            "title": "Image Details",
            "description": "Image Details Description",
            "default": {},
            "required": [
                "repository",
                "pullPolicy",
                "tag"
            ],
            "properties": {
                "repository": {
                    "$id": "#/properties/image/properties/repository",
                    "type": "string",
                    "title": "Repo URL",
                    "description": "Repo description",
                    "default": "durgesh/image"                   
                },
                "pullPolicy": {
                    "$id": "#/properties/image/properties/pullPolicy",
                    "type": "string",
                    "title": "Pull Policy",
                    "description": "Pull Policy description",
                    "default": "IfNotPresent"
                },
                "tag": {
                    "$id": "#/properties/image/properties/tag",
                    "type": "string",
                    "title": "Tag",
                    "description": "Tag",
                    "default": "1.0"
             
                }
            },
            "additionalProperties": true
        },
        "storageSecurity": {
            "$id": "#/properties/storageSecurity",
            "type": "object",
            "title": "Storage Security",
            "description": "storageSecurity description.",
            "required": [
                "supplementalGroups",
                "portRange",
                "ports",
                "check"
            ],
            "properties": {
                "supplementalGroups": {
                    "$id": "#/properties/storageSecurity/properties/supplementalGroups",
                    "type": "array",
                    "title": "Supplemental Groups ID",
                    "description": "Supplemental Groups description",
                    "additionalItems": true,
                    "items": {
                        "$id": "#/properties/storageSecurity/properties/supplementalGroups/items",
                        "type": "integer",
                        "additionalItems": true
                    }
                },
                "portRange": {
                    "$id": "#/properties/storageSecurity/properties/portRange",
                    "type": "array",
                    "title": "Port Range",
                    "description": "Port Range Description.",                    
                    "additionalItems": true,
                    "items": {
                        "$id": "#/properties/storageSecurity/properties/portRange/items",
						"type": "object",
						"properties": {
							"Adapter Name": { "type": "string" },
							"range": { "type": "string" }
						},
                        "additionalItems": true                        
                    }
                },
                "ports": {
                    "$id": "#/properties/storageSecurity/properties/ports",
                    "type": "array",
                    "title": "Ports",
                    "description": "Ports Description",
                    "additionalProperties": {
						"type": "object"
					}
                },
                "check": {
                    "$id": "#/properties/storageSecurity/properties/check",
                    "type": "array",
                    "title": "Check",
                    "description": "Check description",
                    "additionalItems": true,
                    "items": {
                        "$id": "#/properties/storageSecurity/properties/check/items",
                        "type": "string",
                        "additionalItems": true
                    }
                }
            },
            "additionalProperties": true
        },
        "serviceAccount": {
            "$id": "#/properties/serviceAccount",
            "type": "object",
            "title": "Service Account",
            "description": "Service Account description",
            "required": [
                "create",
                "name"
            ],
            "properties": {
                "create": {
                    "$id": "#/properties/serviceAccount/properties/create",
                    "type": "boolean",
                    "title": "Create",
                    "description": "Create description",
                    "default": false
                },
                "name": {
                    "$id": "#/properties/serviceAccount/properties/name",
                    "type": "string",
                    "title": "Name of the account",
                    "default": ""                   
                }
            },
            "additionalProperties": true
        },
        "service": {
            "$id": "#/properties/service",
            "type": "object",
            "title": "Service",
            "description": "Service description",            
            "required": [
                "type",
                "port",
                "annotations"               
            ],
            "properties": {
                "type": {
                    "$id": "#/properties/service/properties/type",
                    "type": "string",
                    "title": "Type",
                    "description": "Define service type",
                    "default": "ClusterIP",
                    "examples": [
                        "ClusterIP",
						"LoadBalancer"
                    ]
                },
                "port": {
                    "$id": "#/properties/service/properties/port",
                    "type": "integer",
                    "title": "Port",
                    "description": "Service access port",
                    "default": 80
                },
                "annotations": {
                    "$id": "#/properties/service/properties/annotations",
                    "type": "object",
                    "title": "Annotations",
                    "description": "Define service annotation.",
                    "default": {},
                    "additionalProperties": {
						"type": "string"
					}
                }
            },
            "additionalProperties": true
        },
        "secret": {
            "$id": "#/properties/secret",
            "type": "object",
            "title": "Secret",
            "required": [
                "secretName"
            ],
            "properties": {
                "secretName": {
                    "$id": "#/properties/secret/properties/secretName",
                    "type": "string",
                    "title": "Name",
                    "default": ""
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}